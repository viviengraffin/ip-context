{
  "tasks": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "bench": "deno bench benchmarks/*.ts",
    "bench:json": "deno bench --json benchmarks/*.ts",
    "build:web": "deno --allow-env --allow-read --allow-write --allow-run build/web.ts",
    "build:npm": "deno --allow-env --allow-read --allow-write --allow-run build/npm.ts",
    "build": "deno --allow-env --allow-read --allow-write --allow-run build/web.ts && deno --allow-env --allow-read --allow-write --allow-run build/npm.ts",
    "doc": "deno doc --html src/main.ts"
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "esbuild": "npm:esbuild@^0.25.10",
    "vitest": "npm:vitest@^3.2.4"
  },
  "fmt": {
    "exclude": ["md", "README.md", "dist", "docs"]
  },
  "publish": {
    "include": [
      "src/",
      "README.md",
      "deno.json",
      "LICENCE"
    ]
  },
  "exclude": ["npm"],
  "license": "MIT",
  "version": "0.0.7",
  "name": "@viviengraffin/ip-context",
  "exports": "./src/main.ts"
}
